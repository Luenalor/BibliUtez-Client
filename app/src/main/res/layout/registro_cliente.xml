<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/Degradado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="right"
        android:background="@drawable/background"
        tools:context=".RegistroCliente">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"

                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/MainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"

                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/layout_transparente"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingTop="20dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="50dp">


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:drawableRight="@drawable/cliente"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="center"
                        android:text="Registro Cliente"
                        android:textColor="@color/azulUtez"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/tinybibli"
                        />

                <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/design_terciarios" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="Por favor, completa los siguientes campos"
                        android:textColor="@color/azulUtez"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical" />


                <EditText
                        android:id="@+id/txtRegistroClienteNombre"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Nombre(s)"
                        android:inputType="textPersonName"
                        android:textColor="@color/azulUtez"
                        android:textColorHighlight="@color/verdeUtez"
                        android:textColorHint="@color/azulTransp"
                        android:textColorLink="@color/verdeUtez"
                        android:textStyle="bold"></EditText>

                <EditText
                        android:id="@+id/txtRegistroClienteApellido1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Primer Apellido"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/azulTransp"
                        android:textColor="@color/azulUtez"

                        android:textStyle="bold"></EditText>

                <EditText
                        android:id="@+id/txtRegistroClienteApellido2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Segundo Apellido"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/azulTransp"
                        android:textColor="@color/azulUtez"

                        android:textStyle="bold"></EditText>
                <EditText
                        android:id="@+id/txtRegistroClienteNacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Fecha de Nacimiento (DD/MM/AAAA)"
                        android:textColor="@color/azulUtez"

                        android:inputType="date"
                        android:textColorHint="@color/azulTransp"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/txtRegistroClienteEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Correo ElectrÃ³nico"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/azulUtez"

                        android:textColorHint="@color/azulTransp"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/txtRegistroClienteCelular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Celular (10 Digitos)"
                        android:inputType="phone"
                        android:textColor="@color/azulUtez"

                        android:textColorHint="@color/azulTransp"
                        android:textStyle="bold" />


                <EditText
                        android:id="@+id/txtRegistroClienteDomicilio"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Domicilio"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:textColorHint="@color/azulTransp"
                        android:textColor="@color/azulUtez"

                        android:textStyle="bold"></EditText>

                <Button
                        android:id="@+id/btnRegistroLibro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:backgroundTint="@color/azulUtez"
                        android:text="REGISTRARSE"
                        android:textColor="#FFFFFF" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>