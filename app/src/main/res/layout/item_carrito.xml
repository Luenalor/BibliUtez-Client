<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/Productos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:id="@+id/Degradado"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/secondary_text_dark"
                    tools:context=".MainActivity">

            </RelativeLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="wrap_content" android:background="@color/azulUtez"
                            android:layout_width="match_parent">
                        <TextView
                                android:layout_column="0"
                                android:gravity="center_horizontal"
                                android:padding="3dip"
                                android:text="Libro"
                                android:textColor="@android:color/white" android:layout_height="wrap_content"
                                android:layout_width="110dp"/>
                        <TextView
                                android:layout_width="160dp"
                                android:layout_column="1"
                                android:gravity="center_horizontal"
                                android:padding="3dip"
                                android:text="Nombre"
                                android:textColor="@android:color/white" android:layout_height="match_parent"
                        />
                        <TextView
                                android:layout_column="2"
                                android:layout_marginRight="20dp"
                                android:gravity="center_horizontal"
                                android:padding="3dip"

                                android:text="Precio"
                                android:textColor="@android:color/white" android:layout_width="127dp"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:background="@color/verdeUtez">
                        <ImageView
                                android:layout_width="10dp"
                                android:layout_height="103dp" app:srcCompat="@drawable/libro1"
                                android:id="@+id/imageView2" android:layout_weight="1"/>
                        <TextView
                                android:layout_width="119dp"
                                android:layout_height="match_parent"
                                android:layout_column="1"
                                android:gravity="center_horizontal|center_vertical"
                                android:padding="3dip"
                                android:text="El Libro del Crimen"
                                android:textColor="@android:color/white" android:id="@+id/ct_nombre"
                                android:layout_weight="1"/>
                        <TextView
                                android:layout_height="match_parent"
                                android:layout_column="2"
                                android:layout_marginRight="20dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:padding="3dip"
                                android:text="$399"

                                android:textColor="@android:color/white" android:id="@+id/ct_precio"
                                android:layout_width="54dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <Button
                            android:id="@+id/btn_eliminar_libro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_span="3"
                            android:fontFamily="@font/roboto"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="Eliminar del carrito"
                            android:backgroundTint="#E44545"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>