<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/Productos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="1">

                <TableRow
                        android:layout_width="276dp"
                        android:background="@color/verdeUtez">

                    <TextView
                            android:layout_width="77dp"
                            android:layout_column="0"
                            android:gravity="center_horizontal"
                            android:padding="3dip"
                            android:text="Libro"
                            android:textColor="@android:color/white"/>

                    <TextView
                            android:layout_width="116dp"
                            android:layout_column="1"
                            android:gravity="center_horizontal"
                            android:padding="3dip"
                            android:text="Nombre"
                            android:textColor="@android:color/white"/>

                    <TextView
                            android:layout_column="2"
                            android:layout_marginRight="20dp"
                            android:gravity="center_horizontal"
                            android:padding="3dip"

                            android:text="Precio"
                            android:textColor="@android:color/white"/>
                </TableRow>

                <TableRow
                        android:layout_width="276dp"
                        android:background="@color/azulTransp">

                    <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:contentDescription="TODO"
                            android:scaleType="fitCenter"
                            android:src="@drawable/libro1"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_column="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:padding="3dip"
                            android:text="El Libro del Crimen"
                            android:textColor="@android:color/white" android:id="@+id/ct_nombre"/>

                    <TextView
                            android:layout_height="match_parent"
                            android:layout_column="2"
                            android:layout_marginRight="20dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:padding="3dip"
                            android:text="$399"

                            android:textColor="@android:color/white" android:id="@+id/ct_precio"/>
                    <Button
                            android:id="@+id/btn_eliminar_libro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_span="3"
                            android:fontFamily="@font/roboto"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="Eliminar del carrito"
                            android:backgroundTint="#E44545"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:background="@color/whiteTransp">

                </TableRow>

            </TableLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>